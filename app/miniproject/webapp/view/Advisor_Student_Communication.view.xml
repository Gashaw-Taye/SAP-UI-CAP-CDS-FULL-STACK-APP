<!-- Student.view.xml -->
<mvc:View
 controllerName="miniproject.controller.Advisor_Student_Communication"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m" 
  xmlns:form="sap.ui.layout.form" 
  xmlns:core="sap.ui.core"
  xmlns:f="sap.f"
>
 <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="advisor student comunication">
  	<!-- <f:DynamicPage headerExpanded="{/headerExpanded}"> -->
    <f:DynamicPage headerExpanded="{editModel>/headerExpanded}">
  <!-- <Page title="Student List Report"> -->
 
		
      <f:content>
    <!-- Your Student Page Content Here -->
    <!-- <Table id="table0" items="{Students>/Students}"  mode="SingleSelectLeft" selectionChange="onSelect"> -->
	<Table
        id="table0"
        mode="SingleSelectLeft" 
        selectionChange="onSelect"
        inset="false"

        
        items="{comm>/Student_communications}"
      >
     <headerToolbar>
                                <OverflowToolbar>
                                    <content>
                                        <ToolbarSpacer />
                                         <SearchField id="searchField" width="20%" placeholder="Search" liveChange=".onSearch" />
                                        <!-- <SearchField id="searchField" width="20%" placeholder="search" search=".onSearch" /> -->
                                        <Button id="createButton" icon="sap-icon://add" tooltip="Create" visible="true" press="onOpenAddDialog">
                                            <layoutData>
                                                <OverflowToolbarLayoutData priority="NeverOverflow" />
                                            </layoutData>
                                        </Button>
                                      

                                         <!-- <Button id="saveButton" text="Save" type="Emphasized" visible="false" enabled="true" press="onSave" />
                                        <Button id="editModeButton" visible="true" icon="sap-icon://edit" tooltip="Edit" press="onEditMode">
                                            <layoutData>
                                                <OverflowToolbarLayoutData priority="NeverOverflow" />
                                            </layoutData>
                                        </Button>  -->

                                    </content>
                                    <dependents>
                                        <Dialog id="OpenDialog" title="Register student">
                                            <buttons>
                                                <Button id="confirmCreate" text="Create" press="onCreate" type="Emphasized" />
                                                <Button id="cancelCreate" text="Cancel" press="onCancelDialog" type="Transparent" />
                                            </buttons>
                                            <form:SimpleForm editable="true" layout="ResponsiveGridLayout">
                                                <form:content>  
                                                <Label text="Id"  />
                                                    <Input id="Id" change="onNameChange"/>                                                 
                                                    <Label text="Student"  />
                                                    <Input id="student" change="onNameChange"/>                                                   
                                                    <Label text="Message" />
                                                     <Input id="Message"  />
                                                    <Label text="User" />
                                                    <Input id="User"  />
                                                    <Label text="Updated_by" />
                                                     <Input id="Updated_by"  />                                            
                                                </form:content>
                                            </form:SimpleForm>
                                        </Dialog>
                                    </dependents>
                                        <dependents>
                                           <Dialog id="studentDetailModal" title="Student Details -" binding="{editModel>/Students}">
                                            <buttons>
                                                <Button id="confirmCreateDetail" text="Create" press=".onUpdate" type="Emphasized" />
                                                <Button id="cancelCreateDetail" text="Cancel" press="onCancelDialog" type="Transparent" />
                                            </buttons>
                                            <form:SimpleForm editable="true" layout="ResponsiveGridLayout">
                                                <form:content>
                                                    <!-- <Label text="Student DB ID" required="true" />
                                                    <Input id="ID" change="onNameChange" /> -->
                                                    <Input id="iD_edit" visible="false"   value="{editModel>/ID_edit}"/> 
                                                    <Label text="student" />
                                                    <Input id="Student_edit" value="{editModel>/Student_edit}"/>
                                                    <Label text="User" />
                                                    <Input id="User_edit"  value="{editModel>/User_edit}" />
                                                    <Label text="Message" />
                                                    <Input id="Message_edit"   value="{editModel>/Message_edit}"/>
                                                    <Label text="Updated_by" />
                                                    <Input id="Updated_by_edit"   value="{editModel>/Updated_by_edit}"/>
                  

                                                </form:content>
                                            </form:SimpleForm>
                                        </Dialog>
                                    </dependents>

                                </OverflowToolbar>
                            </headerToolbar>
      <!-- Columns definition -->
      <columns>
        <!-- Add columns based on your entity properties -->
    
        <Column minScreenWidth="Tablet" demandPopin="true">
         <header>
          <Text text="Student" />
           </header>
        </Column>
        <Column minScreenWidth="Tablet" demandPopin="true"> 
         <header>
          <Text text="User" />
           </header>
        </Column>
        <Column minScreenWidth="Tablet" demandPopin="true">
         <header>
          <Text text="Message" />
           </header>
        </Column>
        <Column minScreenWidth="Tablet" demandPopin="true">
         <header>
          <Text text="Updated_by" />
           </header>
        </Column>
      
        <Column minScreenWidth="Tablet" demandPopin="true">
        <header>
            <Text text="Actions" />
        </header>
    </Column>

       
      </columns>
      <!-- Items definition -->
      <items>
        <ColumnListItem type="Active" id="item0" vAlign="Middle">
          <cells>    
             
           <Text id="id1" text="{comm>ID}" />
            <Text id="id2" text="{comm>Student}" />
            <Text id="id3" text="{comm>User}" />
            <Text id="id4" text="{comm>Message}" />
            <Text id="id5" text="{comm>Updated_by}" />
            <HBox>
                <Button id="id6" icon="sap-icon://edit" press="onOpenDetailDialog"/>
                <Button id="deleteButton" icon="sap-icon://delete" tooltip="Delete" visible="true" press="confirm">
                  <layoutData>
                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                  </layoutData>
                </Button>
              </HBox>                                      
          
          </cells>
        </ColumnListItem>
      </items>
    </Table>

  	</f:content>
 	<f:footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Accept" text="Accept"/>
				<Button type="Reject" text="Reject"/>
			</OverflowToolbar>
		</f:footer>
		</f:DynamicPage>
           </Page>
            </pages>
        </App>
    </Shell>
 
</mvc:View>
