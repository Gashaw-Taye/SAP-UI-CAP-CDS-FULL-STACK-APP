<mvc:View
  controllerName="miniproject.controller.Dashboard"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:l="sap.ui.layout"
  xmlns:m="sap.m"
  xmlns:fiori="sap.ui.webc.fiori"
  xmlns:tnt="sap.tnt"
  xmlns="sap.m"
  xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
  class="side-navigation-demo"
  height="100%">

  <SplitApp
    id="SplitAppDemo"
    initialDetail="detailDetail"
    initialMaster="master"
    detailNavigate="onDetailNavigate"> <!-- Add detailNavigate event handler -->

    <detailPages>
      <mvc:XMLView viewName="miniproject.view.Student" id="detail2" />
      <mvc:XMLView viewName="miniproject.view.User" id="detail" />
       <mvc:XMLView viewName="miniproject.view.Test" id="detailDetail" />   
      <mvc:XMLView viewName="miniproject.view.List" id="detailDetail2" />      
    </detailPages>

    <masterPages >
      <Page id="master" title="Dashboard" backgroundDesign="List" >
       	<Button
            text=""
            icon="sap-icon://menu2"
            press=".onCollapseExpandPress" />

        <tnt:SideNavigation id="sideNavigation" selectedKey="detailDetail" itemSelect="onItemPress">
          <tnt:NavigationList
            id="navigationList"
            width="320px"
            selectedKey="detail"
            itemSelect="onItemPress"
            expanded="{/isSideNavExpanded}">
            
            <!-- Navigation Items -->
            
            <tnt:NavigationListItem text="User Management" key="rootItem1" icon="sap-icon://employee" expanded="false">
              <tnt:NavigationListItem text="User Registration" key="detail" />
              <tnt:NavigationListItem text="Users Details" key="detailDetail" />
               <tnt:NavigationListItem text="Users Details list" key="detailDetail2" />
            </tnt:NavigationListItem>

            <tnt:NavigationListItem text="Student Management" key="rootItem2" icon="sap-icon://learning-assistant" expanded="false">
              <tnt:NavigationListItem text="Student Registration" key="detail2" />
              <tnt:NavigationListItem text="Advisor-Student Communication" key="detail2" />
            </tnt:NavigationListItem>

            <tnt:NavigationListItem text="School Management:" key="rootItem3" icon="sap-icon://curriculum" expanded="false">
              <tnt:NavigationListItem text="School Registration" key="detail" />
              <tnt:NavigationListItem text="Courses Registration" key="detail2" />
            </tnt:NavigationListItem>

            <tnt:NavigationListItem text="Admissions" key="rootItem4" icon="sap-icon://study-leave" expanded="false">
              <tnt:NavigationListItem text="Student Applications" key="detail"  />
            </tnt:NavigationListItem>

          </tnt:NavigationList>
        </tnt:SideNavigation>
        <Button id="btn" text="Logout" type="Accept" press="logout" class="sapMBarHeaderContentRight" />
      </Page>
    </masterPages>
  </SplitApp>
</mvc:View>
