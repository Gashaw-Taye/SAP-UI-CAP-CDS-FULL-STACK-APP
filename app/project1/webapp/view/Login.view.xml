<mvc:View controllerName="project1.controller.Login"
  xmlns:core="sap.ui.core"
  xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
  xmlns:form="sap.ui.layout.form"
  xmlns="sap.m">
  <App>
    <pages>
      <Page title="Login">
        <content>
          <VBox justifyContent="Center" alignItems="Center" height="100%">
            <Panel  id="loginPanel" headerText="Login" width="500px" height="300px">
              <VBox class="sapUiSmallMargin">
                <Input
                  placeholder="Email"
                  type="Email"
                  value="{/email}"
                  width="100%"
                  required="true"
                  id="username"
                  liveChange=".onInputChange" />
                    <Link text="" press="" />
                <Input
                  placeholder="Password"
                  type="Password"
                  value="{/password}"
                  width="100%"
                  required="true"
                  id="pwd"
                  liveChange=".onInputChange" />
                <Link text="" press="" />
                <Button
                  text="Login"
                  type="Emphasized"
                  press="onLoginClick"
                  width="100%" />
                <Link text="Forgot Password?" press=".onForgotPasswordPress" />
              </VBox>
            </Panel>
              <Panel id="otpPanel" headerText="Verify OTP" width="500px" height="300px" visible="false">
              <VBox class="sapUiSmallMargin">
                  <Input
                  visible="false"
                  type="Email"
                  value="{/email}"
                  width="100%"
                  required="true"
                  id="User" />
                    <Link text="" press="" />
                <Input
                  placeholder="One Type Password"
                  type="Text"
                  value="{/otp}"
                  width="100%"
                  required="true"
                  id="otpcode"
                  liveChange=".onInputChange" />
                  <Link text="" press="" />
                <Button
                  text="Verify"
                  type="Emphasized"
                  press="onVerifyOtpClick"
                  width="100%" />
              </VBox>
            </Panel>
          </VBox>
        </content>
      </Page>
    </pages>
  </App>
</mvc:View>
