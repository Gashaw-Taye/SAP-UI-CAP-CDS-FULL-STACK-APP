<mvc:View controllerName="project1.controller.Home"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m">
    <!-- <Page id="page" title="{i18n>title}">
        <content />
    </Page> -->
     <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                        <Table items="{mainModel>/SalesOrder}" id="table0" mode="SingleSelectLeft" selectionChange="onSelect">
                            <headerToolbar>
                                <OverflowToolbar>
                                    <content>
                                        <ToolbarSpacer />
                                        <SearchField id="searchField" width="20%" placeholder="search" search=".onSearch" />
                                        <Button id="createButton" icon="sap-icon://add" tooltip="Create" visible="true" press="onOpenAddDialog">
                                            <layoutData>
                                                <OverflowToolbarLayoutData priority="NeverOverflow" />
                                            </layoutData>
                                        </Button>
                                        <Button id="deleteButton" icon="sap-icon://delete" tooltip="Delete" visible="false" press="onDelete">
                                            <layoutData>
                                                <OverflowToolbarLayoutData priority="NeverOverflow" />
                                            </layoutData>
                                        </Button>

                                        <Button id="saveButton" text="Save" type="Emphasized" visible="false" enabled="true" press="onSave" />
                                        <Button id="editModeButton" visible="true" icon="sap-icon://edit" tooltip="Edit" press="onEditMode">
                                            <layoutData>
                                                <OverflowToolbarLayoutData priority="NeverOverflow" />
                                            </layoutData>
                                        </Button>

                                    </content>
                                    <dependents>
                                        <Dialog id="OpenDialog" title="Create Sales Order">
                                            <buttons>
                                                <Button id="confirmCreate" text="Create" press=".onCreate" type="Emphasized" />
                                                <Button id="cancelCreate" text="Cancel" press="onCancelDialog" type="Transparent" />
                                            </buttons>
                                            <form:SimpleForm editable="true" layout="ResponsiveGridLayout">
                                                <form:content>
                                                    <Label text="Student DB ID" required="true" />
                                                    <Input id="idSo" change="onNameChange" />
                                                    <Label text="Full Name" />
                                                    <Input id="idCustName" />
                                                    <Label text="Office" />
                                                    <Input id="idCustomer"  />
                                                    <Label text="Advisor" />
                                                    <Input id="idPo"  />
                                                    <Label text="Planned Study Date" />
                                                    <Input id="idInqNumber"  />
                                                </form:content>
                                            </form:SimpleForm>
                                        </Dialog>
                                    </dependents>

                                </OverflowToolbar>
                            </headerToolbar>
                            <items>
                                <ColumnListItem type="Active" id="item0">
                                    <cells>
                                  <Text id="id1" text="{mainModel>Student_db_id}"/>
                                <Text id="id2" text="{mainModel>Full_name}"/>
                                <Text id="id3" text="{mainModel>Office}"/>
                                <Text id="id4" text="{mainModel>Advisor}"/>
                                <Text id="id5" text="{mainModel>Planned_study_date}"/>
                                        <Button id="id6" icon="sap-icon://edit" press="onSelect" />
                                    </cells>
                                </ColumnListItem>
                            </items>
                            <columns>
                                <Column>
                                    <header>
                                        <Label text="Student DB ID" />
                                    </header>
                                </Column>
                                <Column>
                                    <header>
                                        <Label text="Full Name" />
                                    </header>
                                </Column>
                                <Column>
                                    <header>
                                        <Label text="Office" />
                                    </header>
                                </Column>
                                <Column>
                                    <header>
                                        <Label text="Advisor" />
                                    </header>
                                </Column>
                                <Column>
                                    <header>
                                        <Label text="Planned Study Date" />
                                    </header>
                                </Column>
                            </columns>
                        </Table>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
