<mvc:View
		controllerName="project1.controller.DynamicPageListReport"
		height="100%"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:core="sap.ui.core"
		xmlns="sap.m"
		xmlns:f="sap.f"
		xmlns:heading="project1.controls"
		xmlns:custom="project1.controls"
		xmlns:fb="sap.ui.comp.filterbar"
		xmlns:svm="sap.ui.comp.smartvariants">	 
		<heading:heading border="5px dashed red" mario="gray" magic="Student Pipeline Management - SAP-BTP Demo"></heading:heading>
		<f:DynamicPage headerExpanded="{/headerExpanded}">		
			<f:title>			
				<f:DynamicPageTitle>				
					<f:heading>					
						<svm:SmartVariantManagement id="svm" showExecuteOnSelection="true" />
					</f:heading>					
					<f:expandedContent>				
						<Label id="expandedLabel" text="No filters active" />						
					</f:expandedContent>
					<f:snappedContent>
						<Label id="snappedLabel" text="No filters active" />
					</f:snappedContent>					
				</f:DynamicPageTitle>
			</f:title>
			<f:header>
				<f:DynamicPageHeader>
					<f:content>		
						<fb:FilterBar id="filterbar" persistencyKey="myPersKey" useToolbar="false" search=".onSearch" filterChange=".onFilterChange" afterVariantLoad=".onAfterVariantLoad">
							<fb:filterGroupItems>
								<fb:FilterGroupItem name="Name" label="Student Name" groupName="Group1" visibleInFilterBar="true">
									<fb:control>									
										<MultiComboBox
											name="Name"
											selectionChange=".onSelectionChange"
											items="{
												path: '/NameCategory',
												templateShareable: true
											}">
											<core:Item key="{key}" text="{name}"/>
										</MultiComboBox>
									</fb:control>
								</fb:FilterGroupItem>
								<fb:FilterGroupItem name="Sex" label="Gender" groupName="Group1" visibleInFilterBar="true">
									<fb:control>
										<MultiComboBox
											name="Sex"
											selectionChange=".onSelectionChange"
											items="{
												path: '/SexCategories',
												templateShareable: true
											}">
											<core:Item key="{key}" text="{name}"/>
										</MultiComboBox>
									</fb:control>
								</fb:FilterGroupItem>
								<fb:FilterGroupItem name="App_type" label="App Type" groupName="Group1" visibleInFilterBar="true">
									<fb:control>
										<MultiComboBox
											name="App_type"
											selectionChange=".onSelectionChange"
											items="{
												path: '/App_Category',
												templateShareable: true
											}">
											<core:Item key="{key}" text="{name}"/>
										</MultiComboBox>
									</fb:control>
								</fb:FilterGroupItem>
                                <fb:FilterGroupItem name="MemberDate" label="Member Date" groupName="Group1" visibleInFilterBar="true">
									<fb:control>
										<MultiComboBox
											name="MemberDate"
											selectionChange=".onSelectionChange"
											items="{
												path: '/dateCategories',
												templateShareable: true
											}">
											<core:Item key="{key}" text="{name}"/>
										</MultiComboBox>
									</fb:control>
								</fb:FilterGroupItem>
                                   <fb:FilterGroupItem name="country" label="Country" groupName="Group1" visibleInFilterBar="true">
									<fb:control>
										<MultiComboBox
											name="country"
											selectionChange=".onSelectionChange"
											items="{
												path: '/countryCategories',
												templateShareable: true
											}">
											<core:Item key="{key}" text="{name}"/>
										</MultiComboBox>
									</fb:control>
								</fb:FilterGroupItem>
                                   <fb:FilterGroupItem name="office" label="Office" groupName="Group1" visibleInFilterBar="true">
									<fb:control>
										<MultiComboBox
											name="office"
											selectionChange=".onSelectionChange"
											items="{
												path: '/officeCategories',
												templateShareable: true
											}">
											<core:Item key="{key}" text="{name}"/>
										</MultiComboBox>
									</fb:control>
								</fb:FilterGroupItem>
							</fb:filterGroupItems>
						</fb:FilterBar>
					</f:content>
					<Button  text="copy" press="onCopyTextToClipboard"></Button>
				</f:DynamicPageHeader>				
			</f:header>
			<f:content>
				<Table
					id="table"
					inset="false"
					items="{
						path: '/Userrecord'
					}">
					<columns>
                    	<Column minScreenWidth="Tablet" width="12rem" demandPopin="true">
						<Text text="Student DB Id"/>
						</Column>
						<Column minScreenWidth="Tablet" width="12rem" demandPopin="true">
						<Text text="Student Name"/>
						</Column>
						<Column minScreenWidth="Tablet" width="8rem" demandPopin="true">
						<Text text="Gender"/>
						</Column>
						<Column minScreenWidth="Tablet" width="12rem" demandPopin="true">
						<Text text="App Type"/>
						</Column>
                         <Column minScreenWidth="Tablet" width="12rem" demandPopin="true">
						<Text text="Member Date"/>
						</Column>
                        <Column minScreenWidth="Tablet" width="12rem" demandPopin="true">
						<Text text="Country"/>
						</Column>
                        <Column minScreenWidth="Tablet" width="5rem" demandPopin="true">
						<Text text="Office"/>
						</Column>
						<Column minScreenWidth="Tablet" width="4rem" demandPopin="true">
						<Text text="Count"/>
						</Column>
                        <Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Status(intake sample)"/>
						</Column>							                      
					</columns>
					<items >
						<ColumnListItem  vAlign="Middle" >
							<cells>
                                <Link text="{StudentDBID}" press="onUserIdClick" />
								<ObjectIdentifier  title="{Name}" />
								<Text text="{Sex}" />
								<Text text="{App_type}" />
                                <Text text="{MemberDate}" />
                                 <Text text="{country}" />
                                  <Text text="{office}" />   
								 <Text text="{Count}" />   
								<HBox class="vBoxContainer" alignContent="Stretch">	
								<custom:CustomColorButton text="CS"  color="{= ${CS} === 1 ? 'Green' : 'Grey'}" press="onsuperman_CS" class="hoverColor"/>
								<custom:CustomColorButton text="AP" color="{= ${AP} === 1 ? 'Green' : 'Grey'}"  press="onsuperman_AP" class="hoverColor"/>
								<custom:CustomColorButton text="DC" color="{= ${DC} === 1 ? 'Green' : 'Grey'}"  press="onsuperman_DC" class="hoverColor" />
								<custom:CustomColorButton text="FC" color="{= ${FC} === 1 ? 'Green' : 'Grey'}"  press="onsuperman_FC" class="hoverColor"/>
								<custom:CustomColorButton text="LF" color="{= ${LF} === 1 ? 'Red' : 'Grey'}"    press="onsuperman_LF" class="hoverColor"/>
							    </HBox>			
						</cells>
						</ColumnListItem>
					</items>
				</Table>
			</f:content>	
		</f:DynamicPage>
</mvc:View>